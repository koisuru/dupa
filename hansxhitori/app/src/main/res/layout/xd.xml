<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/roz"
    android:orientation="vertical">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_above="@id/q"
        android:layout_centerHorizontal="true"
        android:src="@drawable/miron" />

    <TextView
        android:id="@+id/q"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/w"
        android:layout_centerHorizontal="true"
        android:text="Rejestracja"
        android:textSize="32dp" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/w"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/e"
        android:layout_centerHorizontal="true">


        <android.support.v7.widget.AppCompatEditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Login"
            android:inputType=""
            android:maxLines="1" />

    </android.support.design.widget.TextInputLayout>

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/e"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_weight="1"
        android:hint="@string/Hasło"
        android:inputType="textPassword" />

    <android.support.design.widget.TextInputEditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/r"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/e"
        android:layout_centerHorizontal="true"
        android:hint="powtrórz hasło"
        android:inputType="textPassword" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/t"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/r"
        android:layout_centerHorizontal="true"
        android:hint="Email"
        android:inputType="textWebEmailAddress" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/y"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t"
        android:layout_centerHorizontal="true"
        android:hint="numer telefonu"
        android:inputType="number" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/y"
        android:layout_centerHorizontal="true"
        android:text="zarejestruj" />


</RelativeLayout>